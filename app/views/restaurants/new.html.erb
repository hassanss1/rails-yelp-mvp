<div class="container">
  <div class="row justify-content-md-center mt-4">
    <div class="col-xs-8 col-sm-8">
      <%= simple_form_for @restaurant do |r| %>
        <%= r.input :name %>
        <%= r.input :address %>
        <%= r.input :category, collection: Restaurant::CATEGORIES %>
        <%= r.input :phone_number %>
        <%= r.submit 'Create new restaurant', class: 'btn btn-primary' %>
        <%= link_to 'See all restaurants', restaurants_path, class: 'ml-4'%>
      <% end %>
    </div>
  </div>
</div>
